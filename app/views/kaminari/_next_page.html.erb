<%# Link to the "Next" page
  - available local variables
    url:           url to the next page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<li class="fgnp-pager-next">
  <%= link_to_unless_with_block current_page.last?, t('views.pagination.next').html_safe, url, :rel => 'next', :remote => remote do %>
    <button class="fgnp-flat-button"><span class="fgnp-font-icon-page-next"></span></button>
  <% end %>
</li>
