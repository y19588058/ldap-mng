<%# Link to the "First" page
  - available local variables
    url:           url to the first page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<li class="fgnp-pager-first">
  <%= link_to_unless_with_block current_page.first?, t('views.pagination.first').html_safe, url, :remote => remote do %>
  <button class="fgnp-flat-button"><span class="fgnp-font-icon-page-first"></span></button>
  <% end %>
</li>
